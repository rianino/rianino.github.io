  .nav-links a:hover {
    color: var(--color-link-hover);
  }

  .theme-toggle {
    all: unset;
    cursor: pointer;
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    line-height: 0;
    transition: color 0.15s ease;
