---
import BaseLayout from './BaseLayout.astro';
import '../styles/prose.css';

interface Props {
  title: string;
  description: string;
  publishedAt: Date;
  readingTime: string;
  tags: string[];
}

const { title, description, publishedAt, readingTime, tags } = Astro.props;

const formattedDate = publishedAt.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={`${title} â€” Rian`} description={description}>
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{title}</h1>
      <div class="post-meta">
        <time datetime={publishedAt.toISOString().split('T')[0]}>{formattedDate}</time>
        <span>&middot;</span>
        <span>{readingTime}</span>
      </div>
      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag) => (
            <span class="post-tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <slot />
    </div>

    <footer class="post-footer">
      <a href="/" class="back-link">&larr; Back to home</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .post {
    padding-block: var(--space-8);
  }

  .post-header {
    margin-bottom: var(--space-12);
  }

  .post-title {
    font-size: var(--text-3xl);
    font-weight: 600;
    line-height: var(--leading-tight);
    margin-bottom: var(--space-4);
  }

  .post-meta {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .post-tags {
    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  .post-tag {
    font-size: var(--text-sm);
    color: var(--color-olive);
    background-color: var(--color-bg-subtle);
    padding: var(--space-1) var(--space-3);
    border-radius: 4px;
  }

  .post-footer {
    margin-top: var(--space-16);
  }

  .back-link {
    font-size: var(--text-sm);
    text-decoration: none;
    color: var(--color-text-secondary);
  }

  .back-link:hover {
    color: var(--color-link-hover);
  }
</style>
